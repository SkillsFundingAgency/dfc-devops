{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "servicebusName": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "subnetName" :{
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "vnetResourceGroup": {
            "type": "string"
        }
    },
    "variables": {
        "subnetId": "[concat(resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('subnetName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.ServiceBus/namespaces/networkruleset",
            "name": "[concat(parameters('servicebusName'),'/', parameters('subnetName'), '-rule')]",
            "apiVersion": "2018-01-01-preview",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
                "virtualNetworkRules": 
                [
                  {
                    "subnet": {
                      "id": "[variables('subnetId')]"
                    },
                    "ignoreMissingVnetServiceEndpoint": false
                  }
                ]
            }
        }
    ],
    "outputs": {}
}