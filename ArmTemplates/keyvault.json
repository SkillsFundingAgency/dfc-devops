{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultName": {
            "type": "string",
            "metadata": {
                "description": "Name of the keyvault"
            }
        },
        "secretValues": {
            "type": "array",
            "defaultValue": [],
            "metadata": {
                "description": "Optional array of secrets to add - elements need to be in the form { name: ... , secret: ... , type: ... }"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[parameters('keyVaultName')]",
            "apiVersion": "2016-10-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "standard"
                },
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": [
                    {
                        "tenantId": "1a92889b-8ea1-4a16-8132-347814051567",
                        "objectId": "7fa23fd6-537e-4d28-b0ca-54d075cce842",
                        "permissions": {
                            "keys": [],
                            "secrets": [
                                "get"
                            ],
                            "certificates": [],
                            "storage": []
                        }
                    }
                ],
                "enabledForDeployment": false,
                "enabledForDiskEncryption": false,
                "enabledForTemplateDeployment": false
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(parameters('keyVaultName'), '/', parameters('secretValues')[copyIndex()].name)]",
            "condition": "[greater(length(parameters('secretValues')), 0)]",
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
            ],
            "apiVersion": "2016-10-01",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "kvsecrets",
                "count": "[if(equals(length(parameters('secretValues')),0),1,length(parameters('secretValues')))]"
            },
            "properties": {
                "contentType": "[parameters('secretValues')[copyIndex()].type]",
                "value": "[parameters('secretValues')[copyIndex()].secret]"
            }
        }
    ],
    "outputs": {
        "KeyVaultUri": {
            "type": "string",
            "value": "[reference(parameters('keyVaultName')).vaultUri]"
        }
    }
}